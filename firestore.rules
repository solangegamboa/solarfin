rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for the 'transactions' collection
    match /transactions/{transactionId} {
      // A user can create a transaction if they are logged in
      // and the transaction's userId matches their own uid.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      // A user can read, update, or delete their own transactions.
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Rules for the 'creditCards' collection
    match /creditCards/{cardId} {
      // A user can create a credit card if they are logged in
      // and the card's userId matches their own uid.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      // A user can read, update, or delete their own credit cards.
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
